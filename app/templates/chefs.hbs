<div class="flex-container">
  <div class="flex-item">
    <h1>Chef Tracker</h1>
    <p id="explanation">Cooking today: {{cookingCount.length}} of our {{chefCount}} chefs.</p>
    <p>Our {{chefCount}} chefs teach {{totalNumberOfStudents}} students.</p>
    <ul>
      {{#each model as |chef|}}
        <li class="{{if chef.isCooking '' 'not-cooking'}}">
          {{#link-to 'chefs.chef' chef.id}}{{chef.name}}{{/link-to}}
          {{#if chef.isCooking}}
            <button {{action 'exit' chef}}>Exit</button>
          {{else}}
            <button {{action 'enter' chef}}>Enter</button>
          {{/if}}
        </li>
        Number of students: <button {{action 'removeStudent' chef}}>-</button> {{chef.numberOfStudents}} <button {{action 'addStudent' chef}}>+</button>
      {{/each}}
    </ul>
    <hr>
    {{input value=newChef}}<button {{action 'saveNewChef'}}>Save</button>
  </div>
  <div class="flex-item">
  {{outlet}}
  </div>
</div>